{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": false,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "types": ["node"],
    "paths": {
      // "@/*": ["./src/*"],
      "@/components": ["./src/components"],
      "@/constants/api": ["./src/constants/api"],
      "@/styles/*": ["./src/styles/*"],
      "@/styles": ["./src/styles"],
      "@/pages": ["./src/pages"],
      "@/components/UI": ["./src/components/UI"],
      "@/components/Cards": ["./src/components/Cards"],
      "@/utils/futures": ["./src/utils/futures"],
      "@/utils/helpers": ["./src/utils/helpers"],
      "@/utils/hooks": ["./src/utils/hooks"],
      "@/utils/api/hooks": ["./src/utils/api/hooks"],
      "@/@types": ["./src/@types/assets.d.ts"],
      "@/store": ["./src/store"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
